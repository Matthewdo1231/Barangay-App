generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
} 

enum Roles {
  admin
  user
}

model User {
  id        String   @id // Clerk userId
  firstName String
  lastName  String
  email     String   @unique
  role      Roles    @default(user)
  createdAt DateTime @default(now())
}

model News {
  id        String   @id @default(cuid())
  caption   String
  imageUrl  String
  createdAt DateTime @default(now())
}